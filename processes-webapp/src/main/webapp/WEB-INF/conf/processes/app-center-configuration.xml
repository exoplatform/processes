<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd" xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">
    <external-component-plugins>
        <target-component>org.exoplatform.appcenter.service.ApplicationCenterService</target-component>
        <component-plugin>
            <name>Processes</name>
            <set-method>addApplicationPlugin</set-method>
            <type>org.exoplatform.appcenter.plugin.ApplicationPlugin</type>
            <init-params>
                <value-param>
                    <name>enabled</name>
                    <value>${exo.app-center.processes.enabled:true}</value>
                </value-param>
                <value-param>
                    <name>imagePath</name>
                    <value>war:/../images/processesAppIcon.png</value>
                </value-param>
                <value-param>
                    <name>override</name>
                    <value>${exo.app-center.processes.override:true}</value>
                </value-param>
                <value-param>
                    <name>override-mode</name>
                    <value>${exo.app-center.processes.override-mode:merge}</value>
                </value-param>
                <object-param>
                    <name>application</name>
                    <description>description</description>
                    <object type="org.exoplatform.appcenter.dto.Application">
                        <field name="title">
                            <string>Processes</string>
                        </field>
                        <field name="url">
                            <string>./processes</string>
                        </field>
                        <field name="permissions">
                            <collection type="java.util.ArrayList" item-type="java.lang.String">
                                <value>
                                    <string>*:/platform/processes</string>
                                </value>
                                <value>
                                    <string>*:/platform/administrators</string>
                                </value>
                                <value>
                                    <string>*:/spaces/processes</string>
                                </value>
                            </collection>
                        </field>
                        <field name="system">
                            <boolean>true</boolean>
                        </field>
                        <field name="description">
                            <string>Processes application</string>
                        </field>
                        <field name="active">
                            <boolean>true</boolean>
                        </field>
                        <field name="isMandatory">
                            <boolean>true</boolean>
                        </field>
                        <field name="isMobile">
                            <boolean>true</boolean>
                        </field>
                    </object>
                </object-param>
            </init-params>
        </component-plugin>
    </external-component-plugins>
</configuration>